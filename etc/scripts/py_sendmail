#!/usr/bin/python3
import smtplib
import string
import sys
import getopt

try:
   options,args = getopt.getopt(sys.argv[1:],"ht:s:m:","--help --to= --subject= --message=")
except getopt.GetoptError:
   usage()
for name,value in options:
    if name in ("-h","--help"):
       usage()
    if name in ("-t","--to"):
# accept message user
       TO = value
       TO = TO.split(",")
    if name in ("-s","--title"):
       SUBJECT = value
    if name in ("-m","--message"):
       MESSAGE = value
       MESSAGE = MESSAGE.split('\\n')
       MESSAGE = '\n'.join(MESSAGE)

#smtp HOST
HOST = "email-smtp.eu-west-1.amazonaws.com"               
#smtp port
PORT = "587"                              
#FROM mail user
USER = 'AKIAIYYV6OG4XI4XMD2A'                         
#FROM mail password
PASSWD = 'AuIqLRkkOM58pKpelxNjOFFRuqWuZeJd1VUnTCTEXbiR'                    
#FROM EMAIL
FROM = "no-reply@wahashop.com"  

message = """From: %s\nTo: %s\nSubject: %s\n\n%s
    """ % (FROM, ", ".join(TO), SUBJECT, MESSAGE)
smtp = smtplib.SMTP(HOST,PORT)
smtp.ehlo()
smtp.starttls()
smtp.login(USER,PASSWD)
smtp.sendmail(FROM,TO,message)
smtp.close()
